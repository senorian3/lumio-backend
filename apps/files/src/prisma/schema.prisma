// Prisma schema for Files microservice
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../../generated/prisma-files"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PostFile {
    id         Int   @id @default(autoincrement())
    key         String   @unique
    url         String
    mimetype    String
    size        Int
    createdAt   DateTime @default(now())
    deletedAt   DateTime?
    postId      Int
}
