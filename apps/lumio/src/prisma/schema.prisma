// Prisma schema for Lumio microservice
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../../generated/prisma-lumio"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                  @id @default(autoincrement())
  username           String               @unique @db.VarChar(40)
  email              String               @unique @db.VarChar(255)
  password           String               @db.VarChar(200)
  createdAt          DateTime             @default(now())
  deletedAt          DateTime?
  emailConfirmation  EmailConfirmation?
  sessions           Session[]
  github             GitHub?
  google             Google?
  yandex             Yandex?
   posts              Post[]
}


model Session {
  id         Int      @id @default(autoincrement())
  deletedAt  DateTime? @db.Timestamp(6)
  createdAt  DateTime  @default(now()) @db.Timestamp(6)
  expiresAt  DateTime  @db.Timestamp(6)
  deviceId   String    @db.VarChar(255)
  deviceName String    @db.VarChar(255)
  ip         String    @db.VarChar(50)
  userId     Int
  user       User      @relation(fields: [userId], references: [id])
}

model EmailConfirmation {
  id               Int      @id @default(autoincrement())
  confirmationCode String   @db.VarChar(255)
  expirationDate   DateTime @db.Timestamp(6)
  isConfirmed      Boolean
  userId           Int      @unique

  user User @relation(fields: [userId], references: [id])
}

model GitHub {
  id        Int     @id @default(autoincrement())
  email     String  @db.VarChar(255)
  username  String  @db.VarChar(40)
  gitId     String  @unique @db.VarChar(100)

  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id])
}

model Google {
  id        Int    @id @default(autoincrement())
  email     String @db.VarChar(255)
  username  String @db.VarChar(40)
  googleId  String @unique @db.VarChar(100)

  userId    Int    @unique
  user      User   @relation(fields: [userId], references: [id])
}

model Yandex {
  id        Int    @id @default(autoincrement())
  email     String @db.VarChar(255)
  username  String @db.VarChar(40)
  yandexId  String @unique @db.VarChar(100)

  userId    Int    @unique
  user      User   @relation(fields: [userId], references: [id])
}

model Post {
  id          Int      @id @default(autoincrement())
  description String?

  createdAt   DateTime @default(now())
  deletedAt   DateTime?

  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
