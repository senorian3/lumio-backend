// Prisma schema for Lumio microservice
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../../generated/prisma-lumio"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  username        String           @unique @db.VarChar(40)
  email           String           @unique @db.VarChar(255)
  password        String           @db.VarChar(200)
  createdAt       DateTime         @default(now())
  deletedAt       DateTime?

  profile         UserProfile?

  emailConfirmation EmailConfirmation?
  sessions          Session[]
  yandex            Yandex?
  posts             Post[]
}

model UserProfile {
  id               Int       @id @default(autoincrement())
  firstName        String?   @db.VarChar(100)
  lastName         String?   @db.VarChar(100)
  dateOfBirth      DateTime? @db.Timestamp(0)
  country          String?   @db.VarChar(100)
  city             String?   @db.VarChar(100)
  aboutMe          String?   @db.VarChar(200)
  avatarUrl        String?
  profileFilled    Boolean   @default(false)
  profileFilledAt  DateTime?
  profileUpdatedAt DateTime? @db.Timestamp(0)

  userId           Int       @unique
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Session {
  id           Int       @id @default(autoincrement())
  deletedAt    DateTime? @db.Timestamp(6)
  createdAt    DateTime  @default(now()) @db.Timestamp(6)
  expiresAt    DateTime  @db.Timestamp(6)
  deviceId     String    @db.VarChar(255)
  deviceName   String    @db.VarChar(255)
  ip           String    @db.VarChar(50)
  tokenVersion Int       @default(1)
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
}

model EmailConfirmation {
  id               Int      @id @default(autoincrement())
  confirmationCode String   @db.VarChar(255)
  expirationDate   DateTime @db.Timestamp(6)
  isConfirmed      Boolean
  userId           Int      @unique

  user User @relation(fields: [userId], references: [id])
}

model Yandex {
  id       Int    @id @default(autoincrement())
  email    String @db.VarChar(255)
  username String @db.VarChar(40)
  yandexId String @unique @db.VarChar(100)

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model Post {
  id          Int     @id @default(autoincrement())
  description String?

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  userId Int
  user   User @relation(fields: [userId], references: [id])

  files PostFile[]
}

model PostFile {
  id        Int       @id @default(autoincrement())
  postId    Int
  url       String
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  post Post @relation(fields: [postId], references: [id])
}
