{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "moduleNameMapper": {
      "^@lumio/(.*)$": "<rootDir>/../src/$1",
      "^@libs/(.*)$": "<rootDir>/../../../libs/$1"
    }
  }
}
