{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "\\.e2e-spec\\.ts$",
  "testTimeout": 50000,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@lumio/(.*)$": "<rootDir>/../../../apps/lumio/src/$1",
    "@files/(.*)$": "<rootDir>/../../../apps/files/src/$1",
    "@libs/(.*)$": "<rootDir>/../../../libs/$1",
    "^generated/prisma-lumio$": "<rootDir>/../../../generated/prisma-lumio"
  },
  "displayName": "e2e"
}
