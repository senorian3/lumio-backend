{
  "name": "lumio-backend",
  "version": "1.0.0",
  "description": "Backend API for Lumio application - a monorepo with core services",
  "author": "Klim Androsov discodiedance@gmail.com & Ilya Kozlovsky kozlvskiilya@gmail.com",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start:dev:lumio": "dotenv -e apps/lumio/.env.lumio.development -- nest start --watch lumio",
    "start:staging:lumio": "dotenv -e apps/lumio/.env.lumio.staging -- node dist/apps/lumio/main",
    "start:prod:lumio": "dotenv -e apps/lumio/.env.lumio.production -- node dist/apps/lumio/main",
    "start:dev:files": "dotenv -e apps/files/.env.files.development -- nest start --watch files",
    "start:staging:files": "dotenv -e apps/files/.env.files.staging -- node dist/apps/files/main",
    "start:prod:files": "dotenv -e apps/files/.env.files.production -- node dist/apps/files/main",
    "prisma:generate:lumio": "dotenv -e apps/lumio/.env.lumio.development -- prisma generate --schema apps/lumio/src/prisma/schema.prisma",
    "prisma:generate:lumio:test": "dotenv -e apps/lumio/.env.lumio.testing -- prisma generate --schema apps/lumio/src/prisma/schema.prisma",
    "prisma:test:lumio": "dotenv -e apps/lumio/.env.lumio.testing -- prisma migrate deploy --schema apps/lumio/src/prisma/schema.prisma",
    "prisma:dev:lumio": "dotenv -e apps/lumio/.env.lumio.development -- prisma migrate dev --schema apps/lumio/src/prisma/schema.prisma && yarn prisma:generate:lumio",
    "prisma:prod:lumio": "dotenv -e apps/lumio/.env.lumio.production -- prisma migrate deploy --schema apps/lumio/src/prisma/schema.prisma",
    "prisma:reset:lumio": "dotenv -e apps/lumio/.env.lumio.development -- prisma migrate reset --schema apps/lumio/src/prisma/schema.prisma",
    "prisma:studio:lumio": "dotenv -e apps/lumio/.env.lumio.development -- prisma studio --schema apps/lumio/src/prisma/schema.prisma",
    "prisma:generate:files": "dotenv -e apps/files/.env.files.development -- prisma generate --schema apps/files/src/prisma/schema.prisma",
    "prisma:generate:files:test": "dotenv -e apps/files/.env.files.testing -- prisma generate --schema apps/files/src/prisma/schema.prisma",
    "prisma:test:files": "dotenv -e apps/lumio/.env.files.testing -- prisma migrate deploy --schema apps/lumio/src/prisma/schema.prisma",
    "prisma:dev:files": "dotenv -e apps/files/.env.files.development -- prisma migrate dev --schema apps/files/src/prisma/schema.prisma && yarn prisma:generate:files",
    "prisma:prod:files": "dotenv -e apps/files/.env.files.production -- prisma migrate deploy --schema apps/files/src/prisma/schema.prisma",
    "prisma:reset:files": "dotenv -e apps/files/.env.files.development -- prisma migrate reset --schema apps/files/src/prisma/schema.prisma",
    "prisma:studio:files": "dotenv -e apps/files/.env.files.development -- prisma studio --schema apps/files/src/prisma/schema.prisma",
    "docker:up:lumio": "docker-compose -f apps/lumio/docker.compose.lumio.yml up -d",
    "docker:down:lumio": "docker-compose -f apps/lumio/docker.compose.lumio.yml down",
    "docker:clean-db:lumio": "docker-compose -f apps/lumio/docker.compose.lumio.yml exec postgres psql -U postgres -d lumio_db -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\"",
    "docker:up:files": "docker-compose -f apps/files/docker.compose.files.yml up -d",
    "docker:down:files": "docker-compose -f apps/files/docker.compose.files.yml down",
    "docker:clean-db:files": "docker-compose -f apps/files/docker.compose.files.yml exec postgres psql -U postgres -d files_db -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\"",
    "build:lumio": "nest build lumio",
    "build:files": "nest build files",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"{apps,libs}/**/*.{ts,js,json,md}\" \"*.{js,json,md}\"",
    "prepare": "husky",
    "test:e2e:lumio": "dotenv -e apps/lumio/.env.lumio.testing jest --config apps/lumio/test/jest-e2e.json",
    "test:e2e:files": "dotenv -e apps/files/.env.files.testing jest --config apps/files/test/jest-e2e.json",
    "test:auth-e2e": "dotenv -e apps/lumio/.env.lumio.testing -- jest --config apps/lumio/test/jest-e2e.json apps/lumio/test/auth/auth.e2e-spec.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.19.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express-session": "^1.18.2",
    "ms": "^2.1.3",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-github": "^1.1.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^6.19.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "swagger-themes": "^1.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/date-fns": "^2.6.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^7.0.4",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@types/validator": "^13.15.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
